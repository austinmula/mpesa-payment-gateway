# Environment Configuration
NODE_ENV=development
PORT=3000

# Daraja API Configuration
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_BUSINESS_SHORT_CODE=your_business_short_code
MPESA_PASSKEY=your_passkey_here
MPESA_ENVIRONMENT=sandbox

# Security Configuration
JWT_SECRET=your_jwt_secret_here_use_a_strong_random_string
ENCRYPTION_KEY=your_32_character_encryption_key_here
API_KEY=your_api_key_for_gateway_access

# Database Configuration (optional - for storing transaction logs)
DATABASE_URL=your_database_url_here

# Callback URLs
CALLBACK_BASE_URL=https://your-domain.com/api/v1/callbacks
WEBHOOK_SECRET=your_webhook_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
